extends layout

block body
  div(class='console', ng-controller='NavCtrl')
    div(class='logo')
      img(src='/img/logo.jpg')

    input(class='input-block-level', type='text', placeholder='Quick Search Resources', ng-model='search')
    div(class='resource-header', ng-repeat='resource in apiResources')
      h3(data-toggle='collapse', data-target='#resource-{{resource.name}}') {{resource.name}}/
    
      div(id='resource-{{resource.name}}', class='collapse')
        div(class='request', ng-repeat='endpoint in resource.endpoints | filter:search')
          a(href='#show-{{resource.name}}-request')
            span(class='label label-success method') {{endpoint.method}}
            span(class='uri')  {{endpoint.title}}
       

  div(class='credentials', ng-controller='apiAccessCtrl')
    div(class='api-info')
      h5 Add your Credentials
      //- i(class="icon-info-sign", rel="popover", data-placement="bottom", data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.", data-original-title="How to connect")
    input(id='appId', type="text", class='input-small', placeholder='App ID', ng-model='appId', data-app-id='{{appId}}')
    input(id='appKey', type="text", class='input-large', placeholder='App Key', ng-model='appKey', data-app-key='{{appKey}}')

  div(class='ajax-loader')
    div(class='loader-container')
      h3 Loading...
      img(src='/img/loader.gif', alt='loading', class='loader', width='50')

  div(ng-view, class='container-fluid')
    div(class='row')
      div(class='span12', id='error_container')
      
  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
  script(src='http://twitter.github.com/bootstrap/assets/js/google-code-prettify/prettify.js')
  script(src='http://twitter.github.com/bootstrap/assets/js/bootstrap.js')
